{
  "expo": {
    "name": "interviewprep",
    "slug": "interviewprep",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "interviewprep",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to microphone for voice recognition during interviews.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to transcribe your interview responses."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    }
  }
}
